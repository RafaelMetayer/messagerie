{% extends 'base.html.twig' %}
{% block content %}

<head>
    <link rel="stylesheet" href="css/style.css">
</head>




{{ form_start(userForm) }}



<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h5 class="card-title text-center">Sign In</h5>
                        <form class="form-signin">
                            <div class="form-label-group">
                                {{ form_row(userForm.username, {'attr' : {
                                    'class': 'form-control'
                                }}) }}
                                {{ form_widget(userForm.username, { 'attr' : {
                                    'class' : 'form-control'
                                }})}}
                            </div>
                            <div class="form-label-group">
                                {{ form_row(userForm.password, { 'attr' : {
                                    'class' : 'form-control'
                                    
                                    } }   )}}
                            </div>

                            <div class="form-label-group">
                                {{ form_row(userForm.email, {'attr' : { 
                                    'class' : 'form-control'
                                }}) }}
                            </div>

                            <div class="form-group">

                                {{ form_row(userForm.file, {'attr' : {
                                    'class':''
                                }}) }}

                            </div>
                            <hr class="my-4">
                            <div class="form-label-group">
                            {{ form_row(userForm.Inscription, {'attr' : {
                                'class': 'btn btn-lg btn-primary btn-block text-uppercase'
                            }}) }}
                            </div>
                            {{ form_end(userForm) }}
                            <a href="{{ path('login') }}" id="insc">Deja inscrit ?</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
{% endblock %}